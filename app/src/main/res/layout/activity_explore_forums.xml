<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ExploreForumsActivity">

    <!-- Barra de búsqueda -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardSearchForums"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="12dp">

        <SearchView
            android:id="@+id/searchViewForums"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="@string/search_forums_hint"
            android:iconifiedByDefault="false"
            android:background="@android:color/white"/>
    </androidx.cardview.widget.CardView>

    <!-- Título -->
    <TextView
        android:id="@+id/txtExploreHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/explore_forums_header"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/cardSearchForums"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Línea divisoria -->
    <View
        android:id="@+id/dividerExplore"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@id/txtExploreHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- RecyclerView con Grid Layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewExploreForums"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/dividerExplore"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Estado vacío -->
    <LinearLayout
        android:id="@+id/layoutEmptyStateExplore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/recyclerViewExploreForums"
        app:layout_constraintBottom_toBottomOf="@id/recyclerViewExploreForums"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@android:drawable/ic_menu_search"
            android:alpha="0.3"
            android:contentDescription="@string/no_forums"/>

        <TextView
            android:id="@+id/txtEmptyExploreMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_explore_forums_message"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>