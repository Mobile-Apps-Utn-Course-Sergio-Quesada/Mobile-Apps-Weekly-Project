<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".PostActivity">

    <!-- ScrollView para hacer scrollable todo el contenido -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <!-- Título de la sección -->
            <TextView
                android:id="@+id/txtTitlePost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/title_post_form"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:paddingBottom="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"/>

            <!-- ID del Post -->
            <TextView
                android:id="@+id/lblPostId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/label_post_id"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/txtTitlePost"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"/>

            <LinearLayout
                android:id="@+id/layoutPostId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/lblPostId"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp">

                <EditText
                    android:id="@+id/edtPostId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/hint_post_id"
                    android:inputType="text"
                    android:padding="12dp"
                    android:background="@android:drawable/edit_text"
                    android:maxLines="1"/>

                <ImageButton
                    android:id="@+id/btnSearchId_post"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_menu_search"
                    android:contentDescription="@string/desc_search_post"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Título del Post -->
            <TextView
                android:id="@+id/lblPostTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/label_post_title"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/layoutPostId"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/edtPostTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/hint_post_title"
                android:inputType="text"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:maxLines="1"
                app:layout_constraintTop_toBottomOf="@id/lblPostTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp"/>

            <!-- Contenido del Post -->
            <TextView
                android:id="@+id/lblPostContent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/label_post_content"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/edtPostTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/edtPostContent"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:hint="@string/hint_post_content"
                android:inputType="textMultiLine"
                android:gravity="top|start"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:maxLines="6"
                app:layout_constraintTop_toBottomOf="@id/lblPostContent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp"/>

            <!-- Usuario -->
            <TextView
                android:id="@+id/lblUserName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/label_user_name"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/edtPostContent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/edtUserName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/hint_user_name"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:maxLines="1"
                app:layout_constraintTop_toBottomOf="@id/lblUserName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp"/>

            <!-- Foro -->
            <TextView
                android:id="@+id/lblForumName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/label_forum_name"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/edtUserName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/edtForumName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/hint_forum_name"
                android:inputType="text"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:maxLines="1"
                app:layout_constraintTop_toBottomOf="@id/lblForumName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp"/>

            <!-- Sección de Imagen -->
            <TextView
                android:id="@+id/lblPostImage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/label_post_image"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/edtForumName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

            <!-- Vista previa de imagen -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardImagePreview"
                android:layout_width="0dp"
                android:layout_height="200dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/lblPostImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/imgPreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/desc_post_image"
                    android:background="@android:color/darker_gray"/>
            </androidx.cardview.widget.CardView>

            <!-- Botones de Cámara y Galería -->
            <LinearLayout
                android:id="@+id/layoutImageButtons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/cardImagePreview"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp">

                <ImageButton
                    android:id="@+id/btnTakePhoto"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/desc_take_photo"
                    android:src="@android:drawable/ic_menu_camera"
                    android:padding="12dp"
                    android:background="?attr/selectableItemBackground"
                    android:layout_marginEnd="8dp"/>

                <ImageButton
                    android:id="@+id/btnSelectFromGallery"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/desc_select_from_gallery"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:padding="12dp"
                    android:background="?attr/selectableItemBackground"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>